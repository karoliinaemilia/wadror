<%= form_with(model: beer, local: true) do |form| %>
  <% if beer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
      <% beer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= form.label :name %>
    </label>
    <div class="col-auto">
      <%= form.text_field :name %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= form.label :style_id %>
    </label>
    <div class="col-auto">
      <%= form.select :style_id, options_from_collection_for_select(@styles, :id, :name) %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= form.label :brewery_id %>
    </label>
    <div class="col-auto">
      <%= form.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary"%>
  </div>
<% end %>
